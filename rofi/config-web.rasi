configuration{
	lines: 0;
	font: "Iosevka Nerd Font Bold 12";
}

@theme "colors.rasi"

window {
    background-color: @bg;
    text-color: @fg;
    width: 40%;
    height: 5%;
}

mainbox {
    width: 100%;
    height: 100%;
}

inputbar {
    width: 100%;
    height: 100%;
    children: [prompt,entry];
    background-color: inherit;
}

prompt {
    background-color: @yellow;
    padding: 18px 30px;
    text-color: @bg;
}

entry {
		background-color: @bg;
		text-color: @fg;
		padding: 18px;
}
